<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SearchResultsActivity"
    tools:showIn="@layout/activity_search_results">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/event_search_result_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/container_height"/>
    <com.yalantis.filter.widget.Filter
        android:id="@+id/event_search_filer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>