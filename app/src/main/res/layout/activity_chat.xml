<!--            <TextView-->
<!--                android:id="@+id/displayMsg"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent" />-->
<!--        </ScrollView>-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>