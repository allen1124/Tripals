<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_scrollUp"
            style="@style/scrollUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorPrimary"
            android:rotation="180"
            android:elevation="0dp"
            app:layout_constraintEnd_toStartOf="@+id/floatingActionButton_scrollDown"
            app:layout_constraintTop_toTopOf="@+id/floatingActionButton_scrollDown"
            app:srcCompat="@drawable/ic_arrow" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Chatlog_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/send_button"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_pri"
            android:text="@string/send"
            app:layout_constraintBottom_toBottomOf="@+id/sendmsg_editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/sendmsg_editText"
            app:layout_constraintTop_toTopOf="@+id/sendmsg_editText" />

        <EditText
            android:id="@+id/sendmsg_editText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="8dp"
            android:paddingLeft="12dp"
            android:background="@drawable/round"
            android:ems="10"
            android:hint="@string/start_typing"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/chatlog_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton_scrollDown"
            app:backgroundTint="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/Chatlog_toolbar"
            android:elevation="0dp"
            app:srcCompat="@drawable/ic_arrow"
            style="@style/scrollUp" />

        <ImageButton
            android:id="@+id/sendFiles_button"
            android:layout_width="45dp"
            android:layout_height="43dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_corner_pri"
            android:backgroundTint="@color/quantum_grey100"
            android:clickable="true"
            app:layout_constraintBottom_toBottomOf="@+id/sendmsg_editText"
            app:layout_constraintEnd_toStartOf="@+id/send_button"
            app:layout_constraintTop_toTopOf="@+id/sendmsg_editText"
            app:srcCompat="@drawable/ic_imgadd_24dp" />

